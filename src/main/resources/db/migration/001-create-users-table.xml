<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="001-create-users-table" author="your-name">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_name" type="VARCHAR(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="full_name" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="role" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="BOOLEAN" defaultValue="true">
                <constraints nullable="false"/>
            </column>
            <!-- Новое поле: deleted как BOOLEAN (мягкое удаление флагом) -->
            <column name="deleted" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Комментарии к таблице и колонкам -->
        <sql dbms="postgresql">
            COMMENT ON TABLE users IS 'Таблица для хранения информации о пользователях системы';
            COMMENT ON COLUMN users.id IS 'Уникальный идентификатор пользователя';
            COMMENT ON COLUMN users.user_name IS 'Уникальное имя пользователя для входа в систему';
            COMMENT ON COLUMN users.password IS 'Хешированный пароль пользователя';
            COMMENT ON COLUMN users.email IS 'Уникальный email пользователя';
            COMMENT ON COLUMN users.full_name IS 'полное имя пользователя';
            COMMENT ON COLUMN users.role IS 'Роль пользователя (ADMIN, USER)';
            COMMENT ON COLUMN users.active IS 'Флаг активности пользователя';
            COMMENT ON COLUMN users.deleted IS 'Флаг мягкого удаления (true = удалён)';
        </sql>

        <!-- Индексы -->
        <createIndex tableName="users" indexName="idx_users_user_name">
            <column name="user_name"/>
        </createIndex>

        <createIndex tableName="users" indexName="idx_users_email">
            <column name="email"/>
        </createIndex>

        <createIndex tableName="users" indexName="idx_users_role">
            <column name="role"/>
        </createIndex>

        <createIndex tableName="users" indexName="idx_users_active">
            <column name="active"/>
        </createIndex>

        <!-- Индекс для deleted, если часто фильтруете по нему -->
        <createIndex tableName="users" indexName="idx_users_deleted">
            <column name="deleted"/>
        </createIndex>
    </changeSet>

    <!-- Вставка начальных пользователей -->
